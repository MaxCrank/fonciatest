<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <VersionPrefix>1.0</VersionPrefix>
        <TargetFramework>netstandard2.1</TargetFramework>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
        <CrossGenDuringPublish>false</CrossGenDuringPublish>
        <PublishTrimmed>true</PublishTrimmed>
        <Company>Foncia</Company>
        <Description>Library that contains POS terminal implementation</Description>
        <LangVersion>8.0</LangVersion>
        <DocumentationFile>bin\$(Configuration)\Foncia.Domain.POS.xml</DocumentationFile>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <NoWarn>
            CS1591
        </NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
            <_Parameter1>Foncia.Domain.Tests</_Parameter1>
        </AssemblyAttribute>
    </ItemGroup>
    
</Project>
